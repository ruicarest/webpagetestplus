{
  "manifest_version": 2,
  "short_name": "Web Page Test Plus",
  "name": "Web Page Test Plus",
  "description": "Export test results from Web Page Test",
  "version": "0.1.3",
  "homepage_url": "https://github.com/tiagodaraujo/webpagetestplus/",
  "default_locale": "en",
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "permissions": [
    "activeTab",
    "tabs",
    "declarativeContent",
    "clipboardWrite"
  ],
  "background": {
    "scripts": [
      "lib/store.js",
      "js/AppSettings.js",
      "js/helpers/reportHelper.js",
      "background/index.js"
    ]
  },
  "browser_action": {
    "default_icon": "favicon.ico"
  },
  "icons": [
    {
      "src": "favicon.ico",
      "sizes": "128x128 48x48 32x32 24x24 16x16",
      "type": "image/x-icon"
    }
  ],
  "start_url": ".",
  "display": "standalone",
  "theme_color": "#000000",
  "background_color": "#ffffff"
}
