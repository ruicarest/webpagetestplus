{
  "name": "Web Page Test Plus",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Export test results from Web Page Test",
  "homepage_url": "https://github.com/tiagodaraujo/webpagetestplus/",
  "default_locale": "en",
  "permissions": [
    "activeTab",
    "tabs",
    "declarativeContent",
    "clipboardWrite"
  ],
  "background": {
    "scripts": [
      "lib/js/store.js",
      "background/index.js"
    ]
  },
  "browser_action": {
    "default_popup": "browser_action/index.html",
    "default_title": "Export WebPageTest to csv",
    "default_icon": {
      "16": "icons/icon16.png",
      "19": "icons/icon19.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "options_page/index.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}