{
  "name": "Web Page Test Plus",
  "version": "0.1.6",
  "manifest_version": 2,
  "description": "Export test results from Web Page Test",
  "homepage_url": "https://github.com/tiagodaraujo/webpagetestplus/",
  "default_locale": "en",
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "permissions": [
    "activeTab",
    "tabs",
    "declarativeContent",
    "clipboardWrite"
  ],
  "background": {
    "scripts": [
      "lib/store.js",
      "js/AppSettings.js",
      "js/helpers/reportHelper.js",
      "background/index.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "19": "icons/icon24.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "options_page/index.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}